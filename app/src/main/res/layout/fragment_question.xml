<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Activitys.SelectDocumentAndRoomActivityActivity"
    >



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:id="@+id/topHeadBox">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/headlineBox"
            android:layout_width="match_parent"
            android:layout_height="50dp"  />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="0dp"
            android:src="@drawable/ic_show_can_go_back" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_show_can_go_forward" />


    </RelativeLayout>



    <androidx.viewpager.widget.ViewPager
        android:id="@+id/contentBox"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topHeadBox" />


    <LinearLayout
        android:id="@+id/dots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="1dp"



        android:orientation="horizontal" />


</RelativeLayout>


