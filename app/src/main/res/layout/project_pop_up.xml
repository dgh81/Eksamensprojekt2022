<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="0dp"
    android:layout_marginBottom="0dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/yellow"
        android:text="Opret sag"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20dp" />


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="1">


    <EditText
        android:id="@+id/customerName"
        android:layout_weight="0.4"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:hint="Kundenavn" />

    <EditText
        android:id="@+id/caseNumber"
        android:layout_weight="0.6"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:hint="Sag nr." />



</LinearLayout>


    <EditText
        android:id="@+id/customerAddress"
        android:inputType="textPostalAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif"
        android:hint="Adresse"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/customerPostCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif"
            android:hint="Post nr."
            android:inputType="number"
            android:maxLength="4" />

        <EditText
            android:id="@+id/customerCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif"
            android:hint="By"
            android:inputType="text" />

    </LinearLayout>


    <EditText
        android:id="@+id/InstallationName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif"
        android:hint="Installation oplysninger?"
        android:inputType="text" />


    <Button
        android:id="@+id/projectCreateBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Opret"
        android:textSize="20dp"
        android:backgroundTint="#DFB97A"
        android:textColor="@color/black"
        android:layout_margin="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"/>



</LinearLayout>